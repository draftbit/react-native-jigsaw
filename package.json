{
  "name": "@draftbit/ui",
  "version": "37.10.0",
  "description": "Draftbit UI Library",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "draftbit-ui.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "build": "bob build",
    "prepublishOnly": "bob build",
    "release": "release-it",
    "publish:both": "./publish.sh",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/draftbit/react-native-jigsaw",
  "author": "Draftbit <services@draftbit.com> (https://draftbit.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/draftbit/react-native-jigsaw/issues"
  },
  "homepage": "https://github.com/draftbit/react-native-jigsaw#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.16.2",
    "@react-native-community/datetimepicker": "2.4.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-native-community/picker": "^1.6.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/color": "^3.0.1",
    "@types/dateformat": "^3.0.1",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.36",
    "@types/react-native": "0.62.13",
    "commitlint": "^8.3.5",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "node-fetch": "^2.6.0",
    "pod-install": "^0.1.7",
    "prettier": "^2.0.5",
    "react": "~16.9.0",
    "react-dom": "^16.13.1",
    "react-native": "~0.62.2",
    "react-native-svg": "^12.1.0",
    "release-it": "^13.6.3",
    "typescript": "3.8.3"
  },
  "scriptDependencies": {
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "node-fetch": "^2.6.0"
  },
  "peerDependencies": {
    "@react-native-community/datetimepicker": "2.4.0",
    "@react-native-community/picker": "*",
    "react": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*",
    "react-native-svg": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react-native/no-inline-styles": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "semi": true,
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "scripts",
    "example/web-build",
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "@date-io/date-fns": "1.x",
    "@draftbit/react-theme-provider": "^2.1.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/pickers": "^3.2.10",
    "color": "^3.1.2",
    "date-fns": "^2.16.1",
    "dateformat": "^3.0.3",
    "expo-step-indicator": "0.1.2",
    "react-native-safe-area-context": "~3.0.7",
    "react-native-slider": "^0.11.0",
    "react-native-typography": "^1.4.1"
  },
  "resolutions": {
    "@react-native-community/datetimepicker": "2.4.0",
    "react-native-windows": "0.62.0"
  }
}
