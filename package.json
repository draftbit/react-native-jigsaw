{
  "name": "react-native-jigsaw",
  "version": "0.0.0",
  "private": true,
  "description": "Root package.json for workspaces",
  "license": "MIT",
  "author": "Draftbit <services@draftbit.com> (https://draftbit.com)",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "postinstall": "yarn-deduplicate && expo-yarn-workspaces check-workspace-dependencies",
    "example": "yarn --cwd example",
    "bootstrap": "lerna bootstrap",
    "crosslink": "lerna link",
    "format": "prettier --write .",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "build": "lerna run prepare",
    "release": "lerna publish",
    "example:snack": "ts-node --transpile-only scripts/upload-to-snack.ts",
    "clean": "lerna run clean",
    "clean:modules": "lerna run clean:modules && rm -rf node_modules",
    "typescript": "tsc --composite false",
    "upload:run": "node ./scripts/collector.js",
    "upload:test": "bash ./scripts/test-collector.bash",
    "version:expo": "lerna version major --no-push",
    "version:major": "lerna version minor --no-push",
    "version:minor": "lerna version patch --no-push",
    "version:patch": "echo \"No patch versions: See root README.md\"",
    "prepare": "husky install",
    "tsc": "echo 'You are trying to run \"tsc\" in the workspace root. Run it from an individual package instead.' && exit 1"
  },
  "workspaces": [
    "example",
    "packages/*"
  ],
  "devDependencies": {
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "babel-jest": "^26.6.3",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-plugin-prettier": "^3.4.0",
    "expo-yarn-workspaces": "*",
    "husky": ">=6",
    "jest": "^26.6.3",
    "json-server": "^0.16.3",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "node-fetch": "^2.6.1",
    "prettier": "^2.3.0",
    "react-native-builder-bob": "^0.18.2",
    "rimraf": "^3.0.2",
    "snack-sdk": "^3.4.1",
    "ts-node": "^10.0.0",
    "typescript": "~4.3.5",
    "utility-types": "^3.10.0",
    "yarn-deduplicate": "^3.1.0"
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "16"
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "react-native/no-inline-styles": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "semi": true,
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "bracketSpacing": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "scripts",
    "example/web-build",
    "node_modules/",
    "lib/",
    "__generated__"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint --cache --fix",
    "*.{js,ts,tsx,json,mcss,md}": "prettier --write"
  },
  "engines": {
    "node": "16.x"
  }
}
