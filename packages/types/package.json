{
  "name": "@draftbit/types",
  "version": "48.1.0",
  "description": "Shared constants and types between native and core components",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "react-native": "src/index.ts",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "clean:modules": "rimraf node_modules",
    "build": "yarn clean && yarn tsc",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/draftbit/react-native-jigsaw",
    "directory": "packages/types"
  },
  "author": "Draftbit <services@draftbit.com> (https://draftbit.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/draftbit/react-native-jigsaw/issues"
  },
  "homepage": "https://github.com/draftbit/react-native-jigsaw#readme",
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "lib",
      "__mocks__"
    ]
  }
}
